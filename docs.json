{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Ramp",
  "colors": {
    "primary": "#e4f221",
    "light": "#e4f221",
    "dark": "#e4f221"
  },
  "fonts": {
    "family": "Inter",
    "heading": {
      "family": "Playfair Display",
      "weight": 700
    },
    "body": {
      "family": "Open Sans",
      "weight": 400
    }
  },
  "favicon": "/ramp_favicon.jpeg",
  "navigation": {
    "tabs": [
      {
        "tab": "Dev Docs",
        "groups": [
          {
            "group": "Guides",
            "pages": [
              "index",
              "guides/getting-started",
              "guides/app-center",
              "guides/data-relationships",
              "guides/errors",
              "guides/ramp-mcp"
            ]
          }
        ]
      },
      {
        "tab": "REST API",
        "groups": [
          {
            "group": "Accounting",
            "pages": [
              "api-reference/fetch-all-accounting-connections",
              "api-reference/upload-new-options"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/get-all-webhook-subscriptions",
              "api-reference/verify-a-webhook-subscription"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://mintlify.com/community",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light_logo.svg",
    "dark": "/logo/dark_logo.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:test@ramp.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://ramp.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "appearance": {
    "default": "dark"
  },
  "footer": {
    "socials": {
      "x": "https://x.com/tryramp",
      "linkedin": "https://www.linkedin.com/company/ramp/"
    }
  }
}
